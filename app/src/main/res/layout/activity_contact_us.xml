<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="12dp" />



    <!-- Contact 1 -->
    <LinearLayout
        android:id="@+id/contact1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Call Us"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/toggle_contact1_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_plus" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact1_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call us at: +1 800-123-4567"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Line Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:paddingBottom="16dp" />

    <!-- Contact 2 -->
    <LinearLayout
        android:id="@+id/contact2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email Us"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/toggle_contact2_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_plus" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact2_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email us at: support@mybankmate.com"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>